@model Equipe
@{
    ViewData["Title"] = "Equipes";
}


<section class="cadastro_times">
    <div class="escudo">
        <div class="flex_container">
            <div class="titulo_banner">
                <h1>Cadastro de Times</h1>
                <img src="~/_assets/decoracao_cadastro.svg" alt="Decoração cadastro">
            </div>

            <form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <input type="text" name="IdEquipe">
                <input class="input_text" type="text" name="Nome" placeholder="Nome da equipe">
                <label class="label_file" for="input_file">Escolha um Emblema</label>
                <input class="input_file" id="input_file" name="Imagem" type="file" placeholder="Emblema">
                <button class="btn_cadastrar" type="submit">Cadastrar</button>
            </form>
        </div>
    </div>
</section>

<section class="lista_jogadores">
    <div class="container_lista_jogadores">
        <h2>Lista de Times</h2>

        <table>
            <thead class="titulo_tabela">
                <th>Nome da Equipe</th>
                <th>Emblema</th>
                <th></th>
            </thead>

            <tbody>
                @foreach (var equipe in ViewBag.Equipes)
                {
                    <tr>
                        <td>@equipe.Nome</td>
                        <td> <img src="/img/equipes/@equipe.Imagem" width="50px"> </td>
                        <td> <a class="link_times" asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id=@equipe.IdEquipe>excluir</a> </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</section>

